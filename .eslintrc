{
  "extends": ["next", "plugin:prettier/recommended", "prettier"],
  "rules": {
    "@next/next/no-img-element": "off",
    "react/display-name": "off",
    "prettier/prettier": "warn",
    "prefer-const": "warn",
    "no-unused-vars": "warn",
    "import/order": [
      "warn",
      {
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "groups": [
          ["builtin", "external"],
          "internal",
          "parent",
          "sibling",
          "unknown"
        ],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "*.{,s}css",
            "group": "unknown",
            "patternOptions": {
              "matchBase": true
            }
          }
        ],
        "pathGroupsExcludedImportTypes": ["builtin"],
        "newlines-between": "always",
        "warnOnUnassignedImports": true,
      }
    ]
  }
}
